@model IEnumerable<Product>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Products";
}


<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ProductID</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Price.ToString("C")</td>
            <td class="text-center">
                <form>
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <button asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }

    </table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="Add">Add Product</a>
</div>
