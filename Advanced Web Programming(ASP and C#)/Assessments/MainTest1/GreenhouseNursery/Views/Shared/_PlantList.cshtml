@model IEnumerable<Plant>

<div>
    <div class="bg-success text-light font-weight-bold">
        <div class="row p-2">
            <div class="col-3">
               @Html.DisplayNameFor(model => model.PlantCommonName)
            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model => model.PlantCommonName)
            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model => model.PlantCommonName)
            </div>
            <div class="col-2">
                @Html.DisplayNameFor(model => model.PlantCommonName)
            </div>
        </div>
    </div>
    <div>
        @foreach (var p in Model)
        {
            <div class="row">
                <div class="col-3">
                    <a asp-action="Details" asp-route-id="@p.PlantId"> 
                        @p.PlantCommonName 
                    </a>
                </div>
                <div class="col-2">
                    @p.PlantPrice.ToString("C2")
                </div>
                <div class="col-2">
                    @for (int i = 0; i < p.PlantWaterNeed; i++)
                    {
                        <span class="fas fa-tint"> </span>
                    }
                </div>
                <div class="col-2">
                    @p.Category.CategoryName
                </div>
            </div>
        }
    </div>
</div>